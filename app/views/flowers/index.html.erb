    <div class = "span12 color_box" style = "background-color:<%= humidityToColor(humidity.to_i()) %>;"></div>
    <div class = "span12" style = "position:absolute;">
      <div class = "span5" style ="padding-left:20px">
        <h3><%= flower.name %></h3>
      </div>

      <div class = "span4">
        <h1>
          <%= humidity %>
        </h1>
